<form method='POST' action='/books/save'>
  <div class="container-fluid">
    {{#if docreate}}
      <input type='hidden' name='docreate' value="create">
    {{else}}
      <input type='hidden' name='docreate' value="update">
      <input type="hidden" class="form-control" 
          id='id' name='id' value='{{#if book }}{{book.id}}{{/if}}'>
    {{/if}}

    <div class="form-group row">
      <label for="title" class="col-1 col-form-label">Title</label>
      <div class="col">
        <input type="text" class="form-control" 
          id='title' name='title' placeholder="Book title" 
          value='{{#if book }}{{book.title}}{{/if}}'>
      </div>
    </div>

    <div class="form-group row">
      <label for="author" class="col-1 col-form-label">Author</label>
      <div class="col">
        <input type="text" class="form-control" 
          id='author' name='author' placeholder="Book author" 
          value='{{#if book }}{{book.author}}{{/if}}'>
      </div>
    </div>

    <div class="form-group row">
      <label for="publication_date" class="col-1 col-form-label">Publication date</label>
      <div class="col">
        <input type="date" class="form-control" 
          id='publication_date' name='publication_date' placeholder="Book publication date" 
          value='{{#if book }}{{book.publication_date}}{{/if}}'>
      </div>
    </div>

    <div class="form-group row">
      <label for="abstract" class="col-1 col-form-label">Abstract</label>
      <textarea class="form-control" name='abstract' 
        rows="5">{{#if book }}{{book.abstract}}{{/if}}</textarea>
    </div>

    <input type='hidden' name='userId' value="{{user.email}}">

    <button type="submit" class="btn btn-outline-dark">Submit</button>
  </div>
</form>